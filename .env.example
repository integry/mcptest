# Firebase Authentication
# Set to 'true' to enable Firebase authentication features
VITE_FIREBASE_AUTH_ENABLED=false

# Firebase Configuration (required when VITE_FIREBASE_AUTH_ENABLED=true)
# Get these values from your Firebase project console
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Cloudflare Worker Configuration
# URL of your deployed Cloudflare Worker for data persistence
VITE_CLOUDFLARE_WORKER_URL=https://your-worker.workers.dev
# Data sync throttle interval in milliseconds (defaults to 60000 = 1 minute)
VITE_DATA_SYNC_THROTTLE_MS=60000

# CORS Proxy Configuration
# Optional proxy URL for bypassing CORS restrictions
# Uncomment and set to enable the proxy feature in the UI
# VITE_PROXY_URL=https://your-cors-proxy.workers.dev

# OAuth Configuration
# Set to 'true' to use Cloudflare Worker for OAuth, 'false' for localhost
VITE_USE_CLOUDFLARE_OAUTH=true

# Cloudflare Worker URL for OAuth endpoints
# Replace with your actual deployed OAuth worker URL
VITE_OAUTH_WORKER_URL=https://mcptest-oauth-worker.workers.dev

# Server Configuration
# Port for the Express server (defaults to 3000 if not set)
PORT=3000